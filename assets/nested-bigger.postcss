    .show-flex {
        display: flex !important;
    }

    .show {
        display: block !important;
    }

    .hide {
        display: none !important;
    }

    .msg {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        z-index: 10;
        backdrop-filter: blur(10px);

        .content {
            display: block;
            padding: 32px;
            border-radius: 2px;
            box-shadow: 0 0 12px 0 rgba(0, 0, 0, 0.08);
            background-color: $white;
            width: 400px;
            box-sizing: border-box;

            @media screen and (max-width: 1023px) {
                padding: 24px;
                width: calc(100% - 48px);
                max-width: 400px;
            }

            .icon {
                margin-bottom: 24px;
            }

            .title {
                @include font(18);
                font-weight: bold;
                line-height: 1.56;
                letter-spacing: 0.8px;
                color: $grayPhase1;
                margin-bottom: 12px;
            }

            .description {
                @include font(16);
                font-weight: 500;
                line-height: 1.5;
                letter-spacing: 0.8px;
                color: $grayPhase1;
                margin-bottom: 24px;

                .bold {
                    font-weight: bold;
                }
            }

            .check {
                display: flex;
                @include font(14);
                font-weight: 500;
                line-height: 1.57;
                letter-spacing: 0.8px;
                color: $grayPhase1;
                margin-bottom: 24px;
                margin-top: -8px;

                & > .checkmark {
                    height: 24px;
                    width: 24px;
                    margin-right: 8px;

                    .active,
                    .error {
                        display: none;
                    }
                }

                & > input {
                    display: none;

                    &:checked ~ .checkmark {
                        .active {
                            display: block;
                        }

                        .not-active,
                        .error {
                            display: none;
                        }
                    }
                }
            }

            .action-button {
                display: inline-flex;
                align-items: center;
                max-width: 50%;
                padding: 9px 24px;
                box-sizing: border-box;
                border-radius: 4px;
                border: 1px solid $grayPhase1;
                @include font(14);
                font-weight: 500;
                line-height: 1.57;
                letter-spacing: 0.8px;
                color: $grayPhase1;
                cursor: pointer;

                @include hover {
                    background-color: $grayPhase1;
                    color: white;
                }

                @media screen and (max-width: 1023px) {
                    width: 100%;
                    justify-content: center;
                }
            }

            & > div:nth-child(2) {
                &.action-button {
                    margin-top: 12px;
                }
            }

            .link {
                @include font(14);
                max-width: 50%;
                font-weight: 500;
                line-height: 1.57;
                letter-spacing: 0.8px;
                color: $grayPhase2;
                text-decoration: underline;
                cursor: pointer;

                @include hover {
                    color: $grayPhase1;
                }

                @media screen and (max-width: 1023px) {
                    width: 100%;
                }
            }

            .bottom {
                display: flex;
                align-items: center;

                .link {
                    margin-left: 24px;

                    @media screen and (max-width: 1023px) {
                        text-align: start;
                    }
                }
            }
        }
    }
}

.eva-noticeTab {
    display: none;

    &.active {
        display: block;
        position: fixed;
        height: 100%;
        width: 100%;
        background-color: $white;
        top: 0;
        z-index: 10;

        & > .wrapper {
            width: 100%;
            height: 100%;
            background-color: $white;

            & > .content {
                height: 100%;
                background-color: $white;
                overflow-y: scroll;
                overflow-y: overlay;
                padding-bottom: 16px;

                & > .top {
                    display: flex;
                    position: fixed;
                    background-color: $white;
                    padding: 10px 16px;
                    width: 100%;
                    text-align: center;
                    left: 50%;
                    transform: translateX(-50%);
                    border-bottom: 1px solid $grayPhase5;
                    @media screen and (max-width: 1023px) {
                        z-index: 100;
                    }

                    & > .notice {
                        position: absolute;
                    }

                    & > .title {
                        width: 100%;
                        font-weight: bold;
                        @include font(18);
                        line-height: 1.57;
                        letter-spacing: 0.8px;
                    }

                    & > .close {
                        top: 12px;
                        left: 20px;
                        cursor: pointer;
                    }

                    &.scroll {
                        border-bottom: 1px solid $grayPhase5;
                    }
                }

                & > .notice-content {
                    margin: 64px 16px 16px;
                    line-height: 1.71;
                    @include font(14);
                    letter-spacing: 0.8px;
                    padding-left: 16px;

                    & > li {
                        padding-left: 4px;

                        &:last-child {
                            padding-bottom: 20px;
                        }

