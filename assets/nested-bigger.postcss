            .slick-pause-text .not-hover,
            .slick-play-text .not-hover {
                display: block;
            }

            @include hover {
                .slick-pause-text .hover,
                .slick-pause-text .hover,
                .slick-play-text .hover,
                .slick-play-text .hover {
                    display: block;
                }

                .slick-pause-text .not-hover,
                .slick-pause-text .not-hover,
                .slick-play-text .not-hover,
                .slick-play-text .not-hover {
                    display: none;
                }
            }
        }
    }

