            display: flex;
            justify-content: center;
            align-items: center;
            height: auto;
            width: calc(100% - 48px);

            & > .content {
                background-color: $white;
                max-height: 90vh;
                border-radius: 4px;
                padding: 0 16px;
                box-sizing: border-box;
                width: 100%;
                max-width: calc(600px - 48px);

                & > .top {
                    display: flex;
                    justify-content: space-between;
                    margin: 24px 0;

                    & > .title {
                        font-weight: bold;
                        @include font(18);
                        line-height: 1.57;
                        letter-spacing: 0.8px;
                        color: $grayPhase1;
                    }
                }

                & > .detail {
                    display: flex;
                    flex-direction: column;
                    line-height: 1.71;
                    @include font(14);
                    letter-spacing: 0.8px;
                    border-bottom: 1px solid $grayPhase5;

                    & > .flight {
                        display: flex;
                        align-items: center;
                        margin-bottom: 8px;

                        & > .id {
                            font-weight: bold;
                            color: $grayPhase1;
                        }

                        & > .bar {
                            width: 1px;
                            height: 14px;
                            background-color: $grayPhase4;
                            margin: 0 12px;
                        }

                        & > .cabin {
                            color: $grayPhase1;
                        }

                        & > .status {
                            color: $grayPhase2;
                        }
                    }

                    & > .seat-status {
                        background-color: $grayPhase6;
                        padding: 8px 12px;
                        @include font(13);
                        letter-spacing: 0.8px;
                        line-height: 1.57;
                        margin-bottom: 16px;
                        color: $grayPhase2;
                    }

                    & > .flight-time {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        @include font(12);
                        color: $grayPhase2;
                        margin-bottom: 2px;
                    }

                    & > .airport {
