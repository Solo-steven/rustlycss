.cancel-pop {
    display: none;
    position: fixed;
    top: 0;
    z-index: 5;
    overflow: hidden;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);

    .msg {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100vh;
        height: calc(
            var(--vh, 1vh) * 100
        );

        .content {
            display: block;
            padding: 32px;
            border-radius: 2px;
            box-shadow: 0 0 12px 0 rgba(0, 0, 0, 0.08);
            background-color: $white;
            width: 400px;
            box-sizing: border-box;

            @media screen and (max-width: 1023px) {
                margin: 0 31px;
            }

            .icon {
                margin-bottom: 24px;
            }

            .title {
                @include font(18);
                font-weight: bold;
                line-height: 1.56;
                letter-spacing: 0.8px;
                color: $grayPhase1;
                margin-bottom: 12px;
            }

            .description {
                @include font(16);
                font-weight: 500;
                line-height: 1.5;
                letter-spacing: 0.8px;
                color: $grayPhase1;
                margin-bottom: 12px;
            }

            .bottom {
                display: flex;
                align-items: center;
                margin-top: 24px;

                @media screen and (max-width: 1023px) {
                    flex-direction: column;
                }

                .confirm {
                    display: inline-flex;
                    align-items: center;
                    height: 40px;
                    padding: 0 24px;
                    box-sizing: border-box;
                    border-radius: 4px;
                    border: 1px solid $grayPhase1;
                    @include font(14);
                    font-weight: 500;
                    line-height: 1.57;
                    letter-spacing: 0.8px;
                    color: $grayPhase1;
                    cursor: pointer;

                    @include hover {
                        background-color: $grayPhase1;
                        color: $white;
                    }

                    @media screen and (max-width: 1023px) {
                        display: flex;
                        justify-content: center;
                        width: 100%;
                        padding: 0;
                    }
                }

                .cancel {
                    @include font(14);
                    font-weight: 500;
                    line-height: 1.57;
                    letter-spacing: 0.8px;
                    color: $grayPhase2;
                    text-decoration: underline;
                    cursor: pointer;
                    margin-left: 24px;

                    @media screen and (max-width: 1023px) {
                        margin: 16px auto 0;
                    }

                    @include hover {
                        color: $grayPhase1;
                    }
                }
            }
        }
    }
}
