header {
    @media screen and (max-width: 1023px) {
        border-bottom: 1px solid $grayPhase5;
    }
}

.eva-breadcrumbs-navigation {
    @media screen and (max-width: 1023px) {
        padding: 16px 16px 32px;
    }
}

#brands {
    position: relative;

    .background-white {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: $white;
        z-index: 3;
    }

    .scroll-top.has-alcohol-warning {
        @media screen and (max-width: 1023px) {
            bottom: calc(
                10vh + 16px + 79px + constant(safe-area-inset-bottom)
            );
            bottom: calc(10vh + 16px + 79px + env(safe-area-inset-bottom));
            transform: translateY(0);
        }
    }

    #brand-product-detail {
        display: flex;
        flex-direction: column;
        margin: 40px auto 64px;
        width: 100%;
        letter-spacing: 0.8px;

        .product-head {
            display: flex;
            width: 100%;
            max-width: 1280px;
            padding: 0 64px;
            margin: 0 auto 80px;

            @media screen and (max-width: 1023px) {
                flex-direction: column;
                margin: 0;
                padding: 0;
                border-bottom: 8px solid $grayPhase5;
            }

            &__left {
                position: relative;
                margin: 0 48px 0 0;
                width: 50.7%;
                max-width: 584px;
                box-sizing: border-box;

                @media screen and (max-width: 1023px) {
                    margin: 0 auto 16px;
                    width: 100%;
                    max-width: 600px;
                    max-height: 600px;
                }

                .current-slides {
                    position: absolute;
                    left: 50%;
                    bottom: 16px;
                    transform: translateX(-50%);
                    padding: 2px 10px;
                    line-height: 20px;
                    border-radius: 24px;
                    color: $white;
                    @include font(13);
                    background-color: $grayPhase2;
                }

                .carousel {
                    display: flex;
                    justify-content: space-between;
                    margin-bottom: 24px;

                    @media screen and (max-width: 1023px) {
                        margin-bottom: 0;
                    }

                    .product-preview {
                        width: 64px;
                        height: fit-content;
                        max-height: 504px;
                        box-sizing: border-box;

                        @media screen and (max-width: 1152px) {
                            margin-right: 24px;
                        }

                        img {
                            cursor: pointer;
                            width: 100%;
                            border-radius: 2px;
                        }

                        .slick-list {
                            padding: 2px;
                        }

                        .slick-slide {
                            border: none;

                            & > div {
                                width: 56px;
                                font-size: 0;
                            }
                        }

                        &__item {
                            position: relative;
                            margin-bottom: 12px;
                            width: 100%;
                            border-radius: 2px;
                            height: 56px;

                            &.active {
                                .gift,
                                &::before {
                                    position: absolute;
                                    top: 0;
                                    left: 0;
                                    content: '';
                                    width: 56px;
                                    height: 56px;
                                    box-sizing: border-box;
                                    border: 4px solid $white;
                                    border-radius: 2px;
                                }

                                &::after {
                                    position: absolute;
                                    top: 0;
                                    left: 0;
                                    content: '';
                                    width: 56px;
                                    height: 56px;
                                    box-sizing: border-box;
                                    border: 1px solid $primaryMain;
                                    border-radius: 2px;
                                }
                            }
                        }

                        .gift {
                            cursor: pointer;

                            &::after {
                                position: absolute;
                                content: 'Gift';
                                top: 50%;
                                left: 0;
                                width: 100%;
                                height: 20px;
                                line-height: 20px;
                                background-color: rgba(51, 51, 51, 0.8);
                                color: $white;
                                text-align: center;
                                @include font(12);
                            }
                        }
                    }

                    .product-photos {
                        position: relative;
                        width: calc(100% - 80px);
                        max-width: 504px;
                        font-size: 0;

                        @media screen and (max-width: 1023px) {
                            padding: 0;
                            width: 100%;
                            height: 100%;
                            max-height: 100%;
                            max-width: 100%;
                            background-color: transparent;
                        }

                        img {
                            width: 100%;
                            border-radius: 2px;
                        }

                        &.active,
                        &:hover {
                            .prev-arrow,
                            .next-arrow {
                                opacity: 1;

                                @media screen and (max-width: 1023px) {
                                    opacity: 0;
                                }
                            }
                        }

                        .photo-item {
                            cursor: zoom-in;
                            width: auto !important;

                            &.out-stock {
                                position: relative;

                                &::after {
                                    position: absolute;
                                    content: 'Out of stock';
                                    top: 50%;
                                    left: 0;
                                    width: 100%;
                                    height: 32px;
                                    line-height: 32px;
                                    background-color: rgba(0, 0, 0, 0.4);
                                    color: #fff;
                                    text-align: center;
                                    @include font(14);
                                }
                            }

                            &.gift {
                                @media screen and (max-width: 1023px) {
                                    position: relative;

                                    &::after {
                                        position: absolute;
                                        content: 'Gifts';
                                        top: 0;
                                        left: 0;
                                        width: 68px;
                                        height: 32px;
                                        line-height: 32px;
                                        background-color: rgba(0, 0, 0, 0.4);
                                        color: #fff;
                                        text-align: center;
                                        @include font(14);
                                    }
                                }
                            }
                        }
                    }

                    .product-photos .prev-arrow,
                    .product-photos .next-arrow,
                    .product-photos-enlarge .prev-arrow,
                    .product-photos-enlarge .next-arrow {
                        position: absolute;
                        top: 50%;
                        transform: translateY(-50%);
                        width: 48px;
                        height: 96px;
                        z-index: 1;
                        background: rgba(0, 0, 0, 0.3);
                        cursor: pointer;
                        opacity: 0;
                        transition: opacity 0.5s;

                        img {
                            height: 20px;
                        }

                        @media screen and (max-width: 1023px) {
                            display: none;
                        }
                    }

                    .product-photos .prev-arrow,
                    .product-photos-enlarge .prev-arrow {
                        left: 0;
                        border-radius: 0 96px 96px 0;
                    }

                    .product-photos .next-arrow,
                    .product-photos-enlarge .next-arrow {
                        right: 0;
                        border-radius: 96px 0 0 96px;
                    }

                    .product-enlarge-modal {
                        position: fixed;
                        top: 0;
                        left: 0;
                        right: 0;
                        bottom: 0;
                        background: rgba(0, 0, 0, 0.6);
                        z-index: 5;
                        visibility: hidden;

                        &.show {
                            visibility: visible;
                        }

                        .modal {
                            position: fixed;
                            top: calc(50% + 13px);
                            left: 50%;
                            transform: translate(-50%, -50%);
                            padding: 16px;
                            width: calc(100vh - 104px);
                            height: calc(100vh - 104px);
                            max-height: 684px;
                            max-width: 684px;
                            box-sizing: border-box;
                            background-color: $white;
                            border-radius: 2px;
                            z-index: 5;

                            @media screen and (max-width: 1023px) {
                                padding: 0;
                                width: 100%;
                                height: 100vw;
                                background-color: transparent;
                            }
                        }

                        .modal-close {
                            position: absolute;
                            top: -35px;
                            right: 0;
                            display: flex;
                            align-items: center;
                            color: $white;
                            line-height: 22px;
                            font-weight: 500;
                            letter-spacing: 0.8px;
                            float: right;
                            cursor: pointer;

                            @media screen and (max-width: 1023px) {
                                right: 17px;
                            }
                        }

                        .product-photos-enlarge {
                            position: relative;

                            img {
                                width: 100%;
                                height: 100%;
                                border-radius: 2px;
                            }

                            &:hover {
                                .prev-arrow,
                                .next-arrow {
                                    opacity: 1;

                                    @media screen and (max-width: 1023px) {
                                        opacity: 0;
                                    }
                                }
                            }
                        }
                    }
                }
            }

            &__info {
                width: calc(49.3% - 48px);
                font-weight: 500;

                @media screen and (max-width: 1023px) {
                    width: 100%;
                    max-width: 100%;
                    box-sizing: border-box;
                }

                .info {
                    &__top {
                        display: flex;
                        justify-content: space-between;

                        @media screen and (max-width: 1023px) {
                            padding: 0 16px;
                        }

                        .brand-name {
                            margin: 0;
                            color: $grayPhase2;
                            @include font(16);

                            @media screen and (max-width: 1023px) {
                                text-decoration: underline;
                            }

                            @include hover {
                                color: $grayPhase1;
                                text-decoration: underline;
                                transition: 0.3s;
                            }
                        }

                        .social-button {
                            display: flex;
                            align-items: center;

                            &__share {
                                margin-right: 12px;
                                padding-right: 12px;
                                border-right: 1px solid $grayPhase5;
                                height: 16px;

                                img {
                                    height: 100%;
                                }
                            }

                            .eva-tooltip {
                                width: 20px;
                                height: 20px;
                                opacity: 1;

                                @include hover {
                                    .dropdown {
                                        opacity: 1;

                                        .not-hover {
                                            display: none;
                                        }

                                        .hover {
                                            display: block;
                                        }
                                    }
                                }

                                & + .eva-tooltip {
                                    margin-left: 8px;
                                }

                                .dropdown {
                                    img {
                                        width: 100%;
                                        height: 100%;
                                    }

                                    .not-hover {
                                        display: block;
                                    }

                                    .hover {
                                        display: none;
                                    }
                                }

                                .blank-for-hover {
                                    width: 50px;
                                    height: 13px;
                                    left: 0;
                                    top: -11px;
                                }

                                .triangle {
                                    left: 6px;
                                    top: -7px;
                                    opacity: 1;

                                    @media screen and (max-width: 1023px) {
                                        top: 20px;
                                        left: 2px;
                                        transform: rotate(180deg);
                                        border-width: 6px 6px 0 6px;
                                    }
                                }

                                .dropdown-menu {
                                    top: auto;
                                    bottom: calc(100% + 7px);
                                    width: max-content;
                                    white-space: normal;
                                    left: 50%;
                                    transform: translateX(-50%);
                                    opacity: 1;

                                    @media screen and (max-width: 1023px) {
                                        bottom: auto;
                                        top: calc(100% + 9px);
                                        left: calc(50% + 40px);
                                    }
                                }
                            }
                        }
                    }

                    &__product-name,
                    &__id {
                        @media screen and (max-width: 1023px) {
                            padding: 0 16px;
                        }
                    }

                    &__price-currency {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;

                        @media screen and (max-width: 1023px) {
                            flex-direction: column;
                            align-items: flex-start;
                            padding: 0 16px;
                            border-bottom: 8px solid $grayPhase5;
                        }

                        .price {
                            display: flex;
                            flex-wrap: wrap;
                            align-items: center;
                            margin-bottom: 24px;

                            @media screen and (max-width: 1023px) {
                                margin-bottom: 11px;
                            }
                        }

                        .currency {
                            margin-bottom: 24px;
                            flex-shrink: 0;

                            @media screen and (max-width: 1023px) {
                                margin-bottom: 16px;
                            }

                            &__button {
                                display: flex;
                                justify-content: center;
                                align-items: center;
                                @include font(14);
                                color: $grayPhase2;
                                text-decoration: underline;
                                cursor: pointer;

                                @include hover {
                                    color: $grayPhase1;
                                }

                                img {
                                    margin-right: 8px;
                                    width: 16px;
                                    height: 16px;
                                }
                            }

                            .hide {
                                display: none;
                            }

                            &__modal {
                                display: none;
                                position: fixed;
                                top: 0;
                                left: 0;
                                right: 0;
                                bottom: 0;
                                background-color: rgba(0, 0, 0, 0.6);
                                z-index: 5;

                                @media screen and (max-width: 1023px) {
                                    background-color: transparent;
                                }

                                .modal-wrapper {
                                    position: fixed;
                                    top: 50%;
                                    left: 50%;
                                    transform: translate(-50%, -50%);
                                    width: 100%;
                                    max-width: 640px;
                                    height: calc(100vh - 64px);
                                    max-height: 90%;
                                    z-index: 5;

                                    @media screen and (max-width: 1023px) {
                                        top: 0;
                                        left: 0;
                                        transform: translate(100%, 0);
                                        width: 100%;
                                        min-height: 100%;
                                        max-height: 100%;
                                        max-width: 100%;
                                        transition: all 0.8s ease;

                                        &.slide {
                                            transform: translate(0, 0);
                                        }

                                        &.chrome {
                                            height: 100%;
                                            min-height: 100%;
                                        }
                                    }
                                }

                                .modal {
                                    position: absolute;
                                    top: 50%;
                                    transform: translateY(-50%);
                                    padding: 25px 40px 40px 40px;
                                    width: 100%;
                                    /* 1. fit-content not working as execption when using safari 15.4 on MacOS 12.3
                                       2. fit-content seem would not working in firfox (see MDN doc https://developer.mozilla.org/en-US/docs/Web/CSS/height#browser_compatibility) */
                                    height: auto;
                                    max-height: 90%;
                                    box-sizing: border-box;
                                    background-color: $white;
                                    border-radius: 2px;

                                    display: flex;
                                    justify-content: center;
                                    align-items: center;
                                    flex-direction: column;

                                    @media screen and (max-width: 1023px) {
                                        padding: 0;
                                        height: 100%;
                                        max-height: 100%;
                                    }

                                    > .title {
                                        margin: 15px 0 16px 0;
                                        line-height: 42px;
                                        @include font(28);
                                        color: $grayPhase1;
                                        font-weight: 700;

                                        @media screen and (max-width: 1023px) {
                                            margin: 16px 0;
                                            padding-bottom: 16px;
                                            line-height: 28px;
                                            @include font(18);
                                            text-align: center;
                                            width: 100%;
                                            position: relative;
                                            &::after {
                                                content: ' ';
                                                background-color: $grayPhase5;
                                                min-height: 1px;
                                                position: absolute;
                                                width: 100vw;
                                                left: 0px;
                                                bottom: 0px;
                                            }
                                        }
                                    }

                                    .description {
                                        margin: 0 0 32px 0;
                                        line-height: 24px;
                                        @include font(16);
                                        color: $grayPhase1;

                                        @media screen and (max-width: 1023px) {
                                            position: relative;
                                            margin: 0 0 24px 0;
                                            padding: 0 16px;

                                            &::after {
                                                position: absolute;
                                                bottom: -26px;
                                                left: 0;
                                                content: '';
                                                width: 100%;
                                                height: 5px;
                                                background: $white;
                                                z-index: 1;
                                            }
                                        }
                                    }
                                }

                                .close {
                                    display: flex;
                                    align-items: center;
                                    color: $grayPhase2;
                                    line-height: 22px;
                                    font-weight: 500;
                                    letter-spacing: 0.8px;
                                    float: right;
                                    cursor: pointer;
                                    position: absolute;
                                    top: 25px;
                                    right: 40px;
                                    z-index: 8;

                                    .not-hover {
                                        display: block;
                                    }
                                    .hover {
                                        display: none;
                                    }

                                    @include hover {
                                        color: $grayPhase1;

                                        .not-hover {
                                            display: none;
                                        }
                                        .hover {
                                            display: block;
                                        }
                                    }

                                    @media screen and (max-width: 1023px) {
                                        position: absolute;
                                        left: 16px;
                                        top: 16px;
                                    }

                                    span {
                                        @media screen and (max-width: 1023px) {
                                            display: none;
                                        }
                                    }
                                }

                                .content {
                                    position: relative;
                                    overflow-y: scroll; 
                                    overflow-y: overlay;
                                    width: 100%;
                                    box-sizing: border-box;
                                    height: inherit;
    
                                    flex: 1;

                                    @media screen and (max-width: 1023px) {
                                        padding: 0 16px;
                                        height: calc(100vh - 109px);
                                    }

                                    &__col {
                                        display: flex;
                                        text-align: center;
                                        padding: 12px 0;

                                        > div {
                                            width: 50%;
                                            @include font(16);
                                            color: $grayPhase1;
                                            line-height: 24px;
                                        }

                                        &.thead {
                                            position: sticky;
                                            left: 0;
                                            top: 0;
                                            padding: 16px 0;
                                            border-top: 1px solid $grayPhase6;
                                            background-color: $grayPhase6;
                                        }

                                        .title {
                                            @include font(12);
                                            color: $grayPhase2;
                                            line-height: 18px;
                                            font-weight: 500;
                                        }

                                        .text {
                                            margin-top: 8px;
                                            @include font(16);
                                            color: $grayPhase1;
                                            line-height: 24px;
                                            font-weight: 700;
                                        }
                                    }
                                }
                            }
                        }

                        .price-wishlist-share {
                            display: flex;
                            justify-content: space-between;
                            width: 100%;

                            .wishlist-share {
                                display: flex;
                                align-items: center;
                                margin-bottom: 11px;
                            }

                            .add-wishlist,
                            .social-button__share {
                                width: 20px;
                                display: flex;
                                align-items: center;

                                img {
                                    width: 100%;
                                    height: 100%;
                                }
                            }

                            .add-wishlist {
                                margin-right: 12.5px;
                            }
                        }
                    }

                    &__form {
                        @media screen and (max-width: 1023px) {
                            padding: 16px;
                            border-bottom: 8px solid $grayPhase5;
                        }
                    }

                    &__accordion {
                        width: 100%;
                        position: relative;
                        max-width: 100%;
                        box-sizing: border-box;

                        @media screen and (max-width: 1023px) {
                            padding: 8px 16px;
                        }

                        .eva-accordion-item {
                            display: inline-block;
                            position: relative;
                            width: 100%;
                            border-bottom: 1px solid $grayPhase5;

                            @media screen and (max-width: 1023px) {
                                border-bottom: none;
                            }
                        }

                        .eva-accordion-item-title {
                            display: flex;
                            justify-content: space-between;
                            background-color: transparent;
                            @include font(16);
                            line-height: 1.5;
                            letter-spacing: 0.8px;
                            color: $grayPhase1;
                            cursor: pointer;
                            padding: 16px 0;
                            margin: 0;
                            width: 100%;
                            font-weight: 700;
                            color: $grayPhase1;
                        }

                        .accordion-menu {
                            display: none;
                            list-style: none;
                            margin: 0;
                            padding: 0;

                            .accordion-menu-item {
                                display: flex;
                                align-items: center;
                                color: $grayPhase1;
                                padding-left: 8px;
                                justify-content: start;

                                @include hover {
                                    opacity: 1;
                                    text-decoration: underline;
                                }

                                &.active {
                                    opacity: 1;
                                    text-decoration: underline;

                                    & > .text {
                                        font-weight: bold;
                                    }
                                }

                                .text {
                                    @include font(14);
                                    font-weight: 500;
                                    line-height: 1.57;
                                    letter-spacing: 0.8px;
                                    color: $grayPhase1;
                                    padding: 8px;
                                }

                                .icon {
                                    margin-left: 6px;
                                }
                            }
                        }

                        .accordion-content {
                            padding-bottom: 24px;
                            cursor: auto;

                            @media screen and (max-width: 1023px) {
                                padding-bottom: 8px;

                                &.details {
                                    padding-bottom: 16px;
                                }
                            }
                        }

                        .feature-info {
                            position: relative;
                            display: flex;
                            padding-left: 16px;
                            line-height: 22px;
                            @include font(14);
                            display: grid;
                            grid-template-columns: 160px 1fr;

                            &::before {
                                position: absolute;
                                content: '';
                                left: 0;
                                top: 10px;
                                width: 4px;
                                height: 4px;
                                background-color: $secondaryOrange;
                                border-radius: 50%;
                            }
                        }

                        .feature-info + .feature-info {
                            margin-top: 4px;
                        }

                        .feature-title {
                            color: $grayPhase1;
                            margin-right: 12px;
                            display: inline;
                        }

                        .feature-content {
                            display: block;
                            color: $grayPhase2;
                            line-height: 1.57;
                        }

                        .accordion-content.details {
                            @include font(14);
                            color: $grayPhase2;
                            line-height: 22px;
                        }
                    }
                }
            }
        }

        .product-head__left .activity,
        .info__activity .activity {
            margin-left: 80px;

            &__no-discount,
            &__list {
                padding: 0 0 0 15px;
                border-left: 1px solid $grayPhase5;
                line-height: 22px;
                letter-spacing: 0.2px;

                @media screen and (max-width: 1023px) {
                    border-left: none;
                }
            }

            &__no-discount {
                margin-bottom: 16px;
                color: $grayPhase2;
                display: inline-flex;
                & > .component-tooltip {
                    display: inline;
                    width: 16px;
                    height: 16px;
                    margin-left: 8px;
                    transform: translateY(2px);
                }
                @media screen and (max-width: 1023px) {
                    padding: 0;
                }
            }

            &__list {
                margin-bottom: 24px;

                @media screen and (max-width: 1023px) {
                    padding: 0;
                }

                & > .event {
                    display: flex;

                    &:not(:last-child) {
                        margin-bottom: 8px;
                    }

                    & > .component-tag {
                        flex-shrink: 0;
                        margin-right: 8px;
                        white-space: nowrap;
                    }

                    & > .content {
                        align-items: center;
                        flex-wrap: wrap;
                        position: relative;

                        & > span {
                            @include font(14);
                            font-weight: 500;
                            line-height: 24px;
                            letter-spacing: 0.2px;
                            color: $grayPhase1;
                        }

                        & > .component-tooltip {
                            display: inline;
                            width: 16px;
                            height: 16px;
                            margin-left: 8px;
                            transform: translateY(2px);
                        }
                    }
                }
            }

            &__hashtag {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -4px;
                line-height: 22px;
                letter-spacing: 0.8px;

                .hashtag-item {
                    margin: 0 4px 8px 4px;
                    padding: 3px 12px;
                    border: 1px solid $grayPhase5;
                    border-radius: 4px;
                    color: $grayPhase2;

                    @include hover {
                        color: $grayPhase1;
                        text-decoration: underline;
                    }
                }
            }
        }

        .info__activity.activity {
            padding: 16px 16px 0 16px;
            max-height: 999px;

            .activity__title {
                margin-bottom: 12px;
                @include font(16);
                font-weight: bold;
                line-height: 24px;
                letter-spacing: 0.8px;
