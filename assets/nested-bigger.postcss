.eva-bookingTab {
    display: none;

    &.active {
        @media screen and (max-width: 1023px) {
            position: fixed;
            height: 120vh;
            height: calc(
                var(--vh, 1vh) * 100
            );
            width: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            top: 0;
            z-index: 10;
            display: flex;
            justify-content: center;
            align-items: center;
        }

