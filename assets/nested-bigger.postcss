            .slick-slider-dots {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 8px;
                cursor: pointer;

                .slick-slider-dots-bar {
                    width: 100%;
                    height: 2px;

                    @include hover {
                        .inner {
                            background-color: $grayPhase4;
                        }
                    }

                    .inner {
                        position: absolute;
                        top: 2px;
                        left: 0;
                        width: 100%;
                        height: 2px;
                        border-radius: 4px;
                        background-color: $grayPhase5;
                    }
                }

                .slick-slider-dots-bar-active {
                    .inner {
                        .active-bar {
                            position: absolute;
                            top: 0;
                            width: 0;
                            height: 100%;
                            border-radius: 4px;
                            background-color: $grayPhase1;
                        }
                    }
                }
            }

            .slick-active {
                .slick-slider-dots-bar-active {
                    display: block;
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;

                    @include hover {
                        .inner {
                            background-color: $grayPhase4;
                        }
                    }

                    .inner {
                        position: absolute;
                        height: 2px;
                        top: 2px;
                        left: 0;
                        width: 100%;
                        border-radius: 4px;
                        background-color: $grayPhase5;

                        .active-bar {
                            width: 100%;
                            transition: width 5s linear;
                        }
                    }
                }
            }
        }

        .slick-autoplay-toggle-button {
            display: flex;
            align-items: center;
