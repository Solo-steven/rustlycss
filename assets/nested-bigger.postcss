                            color: $grayPhase2;
                            text-decoration: underline;
                        }
                    }

                    & > .select {
                        font-weight: bold;
                        @include font(19);
                        background-color: $primaryMain;
                        width: 100%;
                        height: 48px;
                        padding: 13px;
                        color: $white;
                        border-radius: 4px;
                        cursor: pointer;

                        @include hover {
                            background-color: $primaryMainDark;
                        }
                    }
                }
