            }

            @include hover {
                z-index: 2;
                opacity: 1;
                transition: z-index 0.5s step-start, opacity 0.5s linear;

                img {
                    right: 20px;
                }
            }
        }

        .slick-next {
            right: -48px;

            img {
                left: 12px;
                transition: left 0.1s ease;
            }

            @include hover {
                z-index: 2;
                opacity: 1;
                transition: z-index 0.5s step-start, opacity 0.5s linear;

                img {
                    left: 20px;
                }
            }
        }

        .slick-dots {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
